@using casa_relato.Models
@model List<AliadosModel>
<br>
<br>
<br>
<br>
<div class="container">
    <h2 class="text-center mt-4 mb-4">Aliados</h2>
    <div class="row">
        @foreach (var aliados in Model)
        {
        <div class="col-md-6">
            <div class="card bg-white text-black border-0">
@*                     <img src="@aliados.ImagenAliado" class="card-img-top" alt=""> *@
             <img src="~/images/Aliados.jpg" class="card-img-top" alt="">
                <div class="card-body">
                    <h5 class="card-title">@aliados.NombreAliado</h5>
                    <p class="card-text">@aliados.DescripcionAliado</p>
                </div>
            </div>
        </div>

        }
    </div>
</div>

<style>
.card {
    border: 1px solid #F77F00;
}

.card:hover {
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
}

.card-title {
    color: #F77F00;
}

.h2, h2{
        color: #F77F00;
    }

</style>