        <h2>Agregar Historias</h2>

        <!-- Formulario para agregar historias -->
        <form id="story-form">
            <label for="name">Nombre:</label>
            <input type="text" id="name" required><br>
            <label for="story">Historia:</label>
            <textarea id="story" required></textarea><br>
            <button type="submit">Agregar Historia</button>
        </form>

        <!-- Lista de historias -->
        <div id="stories">
            <!-- Las historias se mostrarán aquí -->
        </div>

        <script>
            // Arreglo para almacenar las historias
            var storyArray = [];

            // Función para agregar una historia
            function addStory() {
                var name = document.getElementById("name").value;
                var story = document.getElementById("story").value;
                var newStory = { name: name, story: story };
                storyArray.push(newStory);
                displayStories();
                document.getElementById("name").value = "";
                document.getElementById("story").value = "";
            }

            // Función para mostrar las historias en la página
            function displayStories() {
                var storiesDiv = document.getElementById("stories");
                storiesDiv.innerHTML = "";
                for (var i = 0; i < storyArray.length; i++) {
                    var storyItem = document.createElement("div");
                    storyItem.innerHTML = "<strong>" + storyArray[i].name + ":</strong> " + storyArray[i].story;
                    storiesDiv.appendChild(storyItem);
                }
            }

            // Agregar evento de envío del formulario
            document.getElementById("story-form").addEventListener("submit", function (event) {
                event.preventDefault();
                addStory();
            });

            // Mostrar las historias iniciales
            displayStories();
        </script>

